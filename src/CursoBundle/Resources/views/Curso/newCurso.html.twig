{% block javascripts %}
   <script src="{{asset('js/bc-bootstrap-collection.js')}}"></script>
   <script src="{{asset('js/ajax/ajaxSeccion.js')}}"></script>
   <script>
    ajaxSeccion();
   </script>
{% endblock %}

{% block body_title %} <h1>Crear Nuevo Curso</h1> {% endblock %}
{% block body_content -%}

    {{ form_start(form)}}
	{{ form_row(form.nombreCurso)}}
    {{ form_row(form.seccion) }}
