    Crear nueva secci√≥n
    </button>
    {{ form_row(form.clase) }}
    {{ form_row(form.horario)}}
	{{ form_row(form.sede)}}
	{{ form_row(form.carreras)}}
	{{ form_row(form.periodo)}}
    
   {% form_theme form _self %}

    {% block _appbundle_curso_year %}
        <div class="form-inline">
            
             {{ form_row(form.year) }}
         </div>
       
    {% endblock %}

    <br>
    <br>
    
    {{form_row(form.submit)}}


    {{ form_end(form)}}

        <ul class="record_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('curso') }}">
            Regresar
        </a>
    </li>
</ul>
