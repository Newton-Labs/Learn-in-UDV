{% extends 'base_page_admin.html.twig' %}

{% block body_title%} <h1>Listado de Cursos</h1> {% endblock %}

{% block body_content -%}
   

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre Curso</th>
                <th>Horario</th>
                <th>Salón</th>
                <th>Sección</th>
                <th>Estado</th>
                <th>Acciones</th>

            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombreCurso }}</td>
                <td>{{ entity.horario}}</td>
                <td>{{ entity.clase }}</td>
                <td>{{ entity.seccion }}</td>

                {% if entity.deletedAt != null %}
                    <td>Eliminado {{entity.deletedAt | date('d-m-Y H:i:s') }}</td>
                {% else %}
                    <td>Activo</td>
               
                <td>
                <ul>
                    <li>
                        <a href="{{ path('curso_show', { 'slug': entity.slug }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('curso_edit', { 'slug': entity.slug }) }}">edit</a>
                    </li>
                </ul>
                </td>
                 {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
<ul>
        <li>
            <a href="{{ path('curso_new') }}">
                Crear Nuevo Curso
            </a>
        </li>
    </ul>
    {% endblock %}

