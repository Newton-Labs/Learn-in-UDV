{% extends '::base_page.html.twig' %}

{% block body_content -%}
    <h1>Documentos subidos</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre Documento</th>
                <th>Actualizado</th>
                <th>Link</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for document in entities %}
        {% if document.tipoDocumento == true %}
            <tr>
                <td>{{ document.documentFixedName }}</td>
                <td>{% if document.updatedAt %}
                        {{ document.updatedAt|date('d-m-Y H:i:s') }}
                    {% endif %}
                </td>

                <td>
                    <a class="btn btn-sm btn-default" href="{{ vich_uploader_asset(document, 'documentFile') }}">Descargar</a>
                </td>

                <td>
                <ul>
                    <li>
                        <a class="btn btn-xs btn-warning" href="{{ path('documento_show', { 'slug': document.slug }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a class="btn btn-xs btn-danger" href="{{ path('documento_edit', { 'slug': document.slug }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endif %}
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class = "btn btn-default btn-block " href="{{ path('documento_new') }}">
               Subir otro documento
            </a>
        </li>
    </ul>
{% endblock %}

