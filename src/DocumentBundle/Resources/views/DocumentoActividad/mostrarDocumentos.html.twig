{% extends '::base_page.html.twig' %}

{% block body_content -%}
    
    <h1> Documentos</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre Documento</th>
                <th>Link</th>
                <th>Subido por</th>
                <th>Fecha Subido</th>

                
            </tr>
        </thead>
        <tbody>
        {% for documento in documentos %}
            <tr>
                <td>{{documento}}
                </td>
                <td>
                    <a  class="btn btn-sm btn-default" target="_blank" href="{{ vich_uploader_asset(documento, 'documentFile') }}">Descargar</a>
                </td>
                <td>
                    {{documento.subidoPor}}
                </td>
                <td>
                    {{documento.fechaSubido | date('d-m-Y H:i:s')}}
                </td>
                    
               
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% endblock %}
